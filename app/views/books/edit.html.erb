
<h1>Editing Book</h1>

<h2>New book<h2>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>


<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<p><%= f.submit 'Update Book' %></p>

<tr>
<th><%= link_to "Show", book_path(@book.id) %></th>
<th><%= link_to "Back", books_path %></th>
</tr>
<% end %>